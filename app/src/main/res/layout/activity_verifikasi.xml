<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ghofir.kostalk.Verifikasi">

 <LinearLayout
     android:orientation="vertical"
     android:gravity="center"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:textSize="24dp"
         android:textColor="@android:color/black"
         android:layout_gravity="center_vertical"
         android:text="Kode OTP telah dikirim kenomor ponsel Anda.
Pastikan Nomor ponsel Anda AKTIF"
         android:textStyle="bold"/>
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:textSize="24dp"
         android:textColor="@android:color/black"
         android:layout_gravity="center_vertical"
         android:text="Silahkan Masukkan kode OTP :"
         android:textStyle="bold"/>
 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColorHint="@android:color/black"
            android:textColor="@android:color/black"
            android:drawableLeft="@drawable/ic_pw_24dp"
            android:layout_marginTop="8dp"
            android:drawablePadding="16dp"
            android:padding="10dp"
            android:inputType="phone"
            android:hint="Kode OTP" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Verivikasi"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bottom1"/>
        <Button
            android:id="@+id/btnBatal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="Resend code"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/bottom1"/>
    </LinearLayout>




</LinearLayout>
